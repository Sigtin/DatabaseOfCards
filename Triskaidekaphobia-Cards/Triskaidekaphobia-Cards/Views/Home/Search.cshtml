@model Triskaidekaphobia_Cards.Models.MTGCardModel

@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

<p>@ViewBag.Message</p>

<form>
    <div>
        <label>Card Name - </label>
        <input type="text" />
    </div>
    <div>
        <label>Set Code - </label>
        <input type="text" />
    </div>
    <div>
        <label>Converted Mana Cost - </label>
        <input type="number" />
    </div>
    <div>
        <label>MCI Number - </label>
        <input type="number" />
    </div>
    <div>
        <label>Mana Cost - </label>
        <input type="text" />
    </div> 
    <div>
        <label>Card ID - </label>
        <input type="text" />
    </div>
    <div>
        <label>Flavor Text - </label>
        <input type="text" />
    </div>
    <div>
        <label>Number - </label>
        <input type="number" />
    </div>
    <div>
        <label>Power - </label>
        <input type="text" />
    </div>
    <div>
        <label>Toughness - </label>
        <input type="text" />
    </div>
    <div class="input-field">
        <label>Rarity - </label>
        @Html.EnumDropDownListFor(x => x.Card_Rarity)
    </div>
    <div class="input-field">
        <label>Card Layout - </label>
        @Html.EnumDropDownListFor(x => x.Card_Layout)
    </div>
    <div>
        <label>Card Type - </label>
        <input type="text" />
    </div>
    <div>
        <label>Card Subtype - </label>
        <input type="text" />
    </div>
    <div>
        <label>Card Text - </label>
        <input type="text" />
    </div>
    <div>
        <label>Multiverse ID - </label>
        <input type="number" />
    </div>
    <div>
        <label>Card Colors - </label>
        <input type="text" />
    </div>
    <div>
        <label>Card Color Identity</label>
        <input type="text" />
    </div>
    <div>
        <label>Card Artist</label>
        <input type="text" />
    </div>
    <div>
        <input type="submit" />
    </div>
</form>