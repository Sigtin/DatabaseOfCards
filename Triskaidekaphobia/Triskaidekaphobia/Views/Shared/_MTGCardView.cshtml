@model TriskaidekaphobiaLib.Models.MTGCard



<hr>
<table>
    <tr>
        <td>
            <img src=@Model.Image />
        </td>
        <td>
            <p>
                <b>Card Name: </b> @Model.Name<br />
                @if (!Model.Types.Contains("Land"))
                {
                    <b>Mana Cost: </b>@Model.ManaCost<br />
                }
                <b>Type: </b>
                @foreach (string type in Model.Types)
                {
                    <span>@type</span>
                }
                <br />
                @if (Model.Subtypes.ElementAt(0) != "")
                {
                    <b>Subtype: </b>
                    foreach (string type in Model.Subtypes)
                    {
                        <span>@type</span>
                    }
                    <br />
                }
                @if (Model.Text != null)
                {
                    <b>Card Text: </b> @Model.Text<br />
                }
                @if (Model.Flavor != null)
                {
                    <b>Flavor Text: </b> @Model.Flavor<br />
                }
                <b>Rarity:</b>@Model.Rarity<br />
                @if (Model.Toughness != null || Model.Power != null)
                {
                    <b>Power/Toughness: </b> @Model.Power <span>/</span> @Model.Toughness<br/>
                }
                <b>Artist: </b>@Model.Artist
                <br />
            </p>
        </td>
    </tr>
</table>

<hr>
